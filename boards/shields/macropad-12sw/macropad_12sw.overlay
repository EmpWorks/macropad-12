#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
    };

    default_layout: default_layout {
        compatible = "zmk,physical-layout";
        display-name = "Default Layout";
        transform = <&default_transform>;
        kscan = <&kscan0>;
    };

	default_transform: keymap_transform_0 {
		compatible = "zmk,matrix-transform";
		columns = <3>;
		rows = <4>;
	
		map = <
RC(0,0) RC(0,1) RC(0,2)
RC(1,0) RC(1,1) RC(1,2)
RC(2,0) RC(2,1) RC(2,2)
RC(3,0) RC(3,1) RC(3,2)
		>;
	};

    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        wakeup-source;

        col-gpios
            = <&xiao 10 GPIO_ACTIVE_HIGH>
            , <&xiao 9 GPIO_ACTIVE_HIGH>
            , <&xiao 8 GPIO_ACTIVE_HIGH>
            , <&xiao 7 GPIO_ACTIVE_HIGH>
            ;

        row-gpios
            = <&xiao 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;
    };
};